{
  "name": "ALLbum by Ameba",
  "version": "0.3.2",
  "manifest_version": 2,
  "description": "ALLbum official photo viewer.",
  "background": {
   "page" : "background.html"
  },
  "icons": { "128": "img/ameba_128.png" },
  "browser_action": {
    "default_icon": "img/ameba_19.png",
    "default_title": "ALLbum by Ameba",
    "default_popup": "popup.html"
  },
  "omnibox": { "keyword" : "allbum" },
  "icons": {
    "16": "img/ameba_19.png",
    "128": "img/ameba_128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "notifications",
    "tabs"
  ]
}