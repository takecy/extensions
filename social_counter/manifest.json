{
  "name": "Social counter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Social counter",
  "icons": { "128": "img/stars.png" },
  "permissions": [
    "http://b.hatena.ne.jp/*",
    "https://graph.facebook.com/*",
    "http://urls.api.twitter.com/*",
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
   "browser_action": {
    "default_icon": {
      "19": "img/stars.png",
      "38": "img/stars.png"
    },
    "default_title": "Social Counter",
    //これを指定しているとアイコンのonClickedイベント拾えない
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/jquery-1.9.1.min.js", "js/service.js", "js/background.js"],
    "persistent": false
  }
}