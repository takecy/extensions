{
  "name": "Social counter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Social counter",
  "icons": { "128": "img/google_128.png" },
  "permissions": [
    "http://b.hatena.ne.jp/*",
    "https://graph.facebook.com/*",
    "http://urls.api.twitter.com/*",
    "tabs"
  ],
   "browser_action": {
    "default_icon": {
      "19": "img/google_128.png",
      "38": "img/google_128.png"
    },
    "default_title": "Social Counter",
    //これを指定しているとアイコンのonClickedイベント拾えない
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  }
}