  },
  "omnibox": { "keyword" : "allbum" },
  "icons": {
    "16": "img/icon_36.png",
    "128": "img/icon_96.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "notifications",
    "tabs"
  ]
}