{
  "name": "ALLbum by Ameba",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "official photo viewer for ALLbum by Ameba.",
  "background": {
   "page" : "background.html"
  },
  "icons": { "128": "img/icon_96.png" },
  "browser_action": {
    "default_icon": "img/icon_36.png",
    "default_title": "ALLbum by Ameba",
